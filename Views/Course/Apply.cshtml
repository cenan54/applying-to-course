@model Candidate
@{
    ViewData["Title"] = "Apply for a Course";
}

<div class="display-6">
Apply
</div>

<form method="post" asp-action="Apply">
    <div class="form-group my-3">
        <label asp-for="Email">E-Mail</label>
        <input asp-for="Email" name="Email" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="FirstName">First Name</label>
        <input asp-for="FirstName" name="FirstName" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="LastName">Last Name</label>
        <input asp-for="LastName" name="LastName" class="form-control"/>
    </div>
    <div class="form-group my-3">
        <label asp-for="Age"></label>
        <select asp-for="Age" name="Age" class="form-control">
            <option value=18 selected="selected">18</option>
            <option value=19>19</option>
            <option value=20>20</option>
            <option value=21>21</option>
            <option value=22>22</option>
            <option value=23>23</option>
            <option value=24>24</option>
            <option value=25>25</option>
        </select>
    </div>

    <fieldset class="my-5">
        <legend>Select One Course</legend>
        <p>
            <input id="mvc" type="radio" asp-for="SelectedCourse"  value="ASP.NET Core MVC"/>
            <label for="mvc">ASP.Net Core MVC</label>
        </p>
        <p>
            <input id="api" type="radio" asp-for="SelectedCourse"  value="ASP.NET Core API"/>
            <label for="api">ASP.NET Core API</label>
        </p>
        <p>
            <input id="angular" type="radio" asp-for="SelectedCourse" value="Angular" />
            <label for="angular">Angular</label>
        </p>
    </fieldset>

    <div>
        <button class="btn btn-primary" type="submit">Apply</button>
        <button class="btn btn-outline-success" asp-controller="Home" asp-action="Index">Home</button>
    </div>
    
</form>